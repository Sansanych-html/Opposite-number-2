class OppositeTest extends TestCase {
    public function testThatOppositeWorksForExamplesProvidedInDescription() {
      $this->assertSame(-1, opposite(1));
      $this->assertSame(-14, opposite(14));
      $this->assertSame(34, opposite(-34));
    }
  }

  function opposite($n) {
    return -$n;// Your code here
  }
  
